<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.maciek.v2.Activities.MediaPlayerActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_view_media_player"
        android:layout_above="@+id/linear_layout_media_player"
        android:visibility="gone"
        android:layout_alignParentTop="true"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linear_layout_media_player"
        android:visibility="visible"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/launch_media_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="140dp"
        android:visibility="gone"
        android:src="@drawable/ic_video_button" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/launch_aparat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:visibility="gone"
        android:src="@drawable/ic_lunch_camera" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:id="@+id/linear_layout_media_player">
        <!--<SeekBar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/seek_bar"-->
            <!--/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currently_listening"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_current_song"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:id="@+id/button_previous"
                android:src="@drawable/ic_previous_white"
                android:background="@drawable/button_media"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:id="@+id/start_stop_button"
                android:src="@drawable/ic_pause_circle"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_media"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:id="@+id/next_button"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/button_media"
                android:drawableTint="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/szary_michala"
            android:paddingLeft="0dp"
            >
            <Button
                android:id="@+id/GoToMainMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_main_manu"
                android:paddingLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/track_name_text_view"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <Button
                android:id="@+id/showList"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_list_black"
                android:paddingRight="15dp"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
